{
  "name": "100xtrader",
  "version": "1.0.0",
  "description": "A comprehensive trading journal platform",
  "private": true,
  "scripts": {
    "install:all": "cd go-core && go mod download && cd ../web && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd go-core && go run cmd/main.go",
    "dev:frontend": "cd web && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd go-core && go build -o ../bin/100xtrader-api ./cmd/main.go",
    "build:frontend": "cd web && npm run build",
    "start": "npm run start:backend & npm run start:frontend",
    "start:backend": "cd go-core && ./bin/100xtrader-api",
    "start:frontend": "cd web && npm start",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "docker:logs": "docker-compose logs -f",
    "clean": "rm -rf bin/ web/.next web/node_modules go-core/vendor *.sqlite go-core/db.sqlite go-core/temp_db.sqlite"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "keywords": [
    "trading",
    "journal",
    "algorithmic-trading",
    "trading-platform"
  ],
  "author": "",
  "license": "MIT"
}
